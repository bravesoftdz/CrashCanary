<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CrashInfoActivity">

    <Button
        android:id="@+id/crash_canary_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="@string/crash_canary_delete_all" />

    <ListView
        android:id="@+id/crash_canary_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/crash_canary_btn" />

    <ScrollView
        android:id="@+id/crash_canary_sv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/crash_canary_detail_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>